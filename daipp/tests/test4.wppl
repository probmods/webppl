var data = [1.2]

var model = function() {

  initContext(data);   //initialize the context, incorporating the observation(s)

  var x = sampleDaipp(Gaussian({mu: 5, sigma: 1}));

  factor(Gaussian({mu: x, sigma: 1}).score(data[0]));

  return x;

};

var erp = SMC(model, {particles: 100, rejuvSteps: 10, saveTraces: true, ignoreGuide: true});
var params = Optimize(model, {steps: 200, method: {adagrad: {stepSize: 0.1}}, estimator: {EUBO: {traces: erp.traces, miniBatchSize: 10}}});

var marginal = SampleGuide(model, {samples: 1000, params: params});

var guideMean = expectation(marginal);
var guideSd = std(marginal, guideMean);

// Check guide is fit to example traces.
var posteriorMean = expectation(erp);
var posteriorSd = std(erp, posteriorMean);

testWithinTol(guideMean, posteriorMean, 0.1);
testWithinTol(guideSd, posteriorSd, 0.1);

'done';
