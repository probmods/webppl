var data = [1, 2];

var model = function() {

  initContext(data);

  var priorss = [1, 1];
  var tau = sampleDaipp(gammaERP, priorss);

  var priormv = [0, 1 / Math.sqrt(tau)];
  var mu = sampleDaipp(gaussianERP, priormv);

  var d = mapData(data, function(datum) {

    factor(gaussianERP.score([mu, 1 / Math.sqrt(tau)], datum));

  });

  return [mu, tau];
};

