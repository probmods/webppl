var xs = [0, 1, 2, 3];
var ys = [0, 1, 4, 6];

var model = function() {
  var m = sample(GaussianDrift({mu: 0, sigma: 2}));
  var b = sample(GaussianDrift({mu: 0, sigma: 2}));

  var sigma = gamma(1, 1);

  var f = function(x) {
    return m * x + b;
  };

  map2(
      function(x, y) {
        factor(score(Gaussian({mu: f(x), sigma: sigma}), y));
      },
      xs,
      ys);

  return m;
};
